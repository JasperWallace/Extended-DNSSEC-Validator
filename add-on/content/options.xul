<!DOCTYPE prefwindow SYSTEM "chrome://extval/locale/options.dtd">
<prefwindow id="extval-pref-window" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" title="&prefwindow.title;">

  <prefpane id="extval-pref-pane1">
    <preferences>
      <preference id="cacheflushinterval" name="extensions.extval.cacheflushinterval" type="int"/>
      <preference id="debugoutput" name="extensions.extval.debugoutput" type="bool"/>
      <preference id="dnsforwarder" name="extensions.extval.dnsforwarder" type="string"/>
    </preferences>
    
    <groupbox>
	<caption label="&dnsserver.label;" />
    	<hbox align="center">
		<label control="pref-dnsforwarder" value="&dnsserver.description;" />
		<textbox preference="dnsforwarder" id="pref-dnsforwarder" />
    	</hbox>
    </groupbox>
  </prefpane>
